<odl-bmp-monitors xmlns="urn:opendaylight:params:xml:ns:yang:bmp-monitor-config">
    <bmp-monitor-config>
        <monitor-id>example-bmp-monitor</monitor-id>
        <!--<binding-address>0.0.0.0</binding-address>-->
        <binding-port>12345</binding-port>
        <!--
             For TCP-MD5 support make sure the dispatcher has the "md5-server-channel-factory"
             attribute set and then set the appropriate monitored router entries here. Note that if this
             option is configured, the monitored router(s) connecting here must have the same password configured,
             otherwise they will not be able to connect at all.
        <monitored-router>
            <address>192.0.2.2</address>
            <password>changeme</password>
        </monitored-router>
        -->
        <!-- To enable active TCP connection, configure monitored-router with address, port and active flag.
        <monitored-router>
            <address>192.0.2.2</address>
            <port>1234</port>
            <active>true</active>
        </monitored-router>
         -->
    </bmp-monitor-config>
</odl-bmp-monitors>