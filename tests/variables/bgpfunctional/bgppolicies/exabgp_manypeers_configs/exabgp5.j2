{% for peer in peers %}
neighbor {{ odl_ip }} {
    router-id {{ peer.ip }};
    local-address {{ peer.ip }};
    local-as 64496;
    peer-as 64496;

    static {
        route 5.{{ peer.index }}.1.0/24 {
            next-hop 15.0.{{ peer.index }}.254;
            extended-community 31740:31740 extended-community [ 32740:32740 32740:0 ];
        }
    }
    capability {
        route-refresh {{ ROUTEREFRESH }};
        add-path {{ ADDPATH }};
    }
    family { all }
}
{% endfor %}