<peer-group xmlns="urn:opendaylight:params:xml:ns:yang:bgp:openconfig-extensions">
    <peer-group-name>$PEER_GROUP_NAME</peer-group-name>
    <config>
        <peer-type>INTERNAL</peer-type>
    </config>
    <transport>
        <config>
            <passive-mode>$PASSIVE_MODE</passive-mode>
        </config>
    </transport>
    <timers>
        <config>
            <hold-time>$HOLDTIME</hold-time>
            <connect-retry>5</connect-retry>
        </config>
    </timers>
    <route-reflector>
        <config>
            <route-reflector-client>$RR_CLIENT</route-reflector-client>
        </config>
    </route-reflector>
    <afi-safis>
        <afi-safi>
            <afi-safi-name xmlns:x="http://openconfig.net/yang/bgp-types">x:IPV4-UNICAST</afi-safi-name>
        </afi-safi>
        <afi-safi>
            <afi-safi-name xmlns:x="http://openconfig.net/yang/bgp-types">x:IPV6-UNICAST</afi-safi-name>
        </afi-safi>
        <afi-safi>
            <afi-safi-name>LINKSTATE</afi-safi-name>
        </afi-safi>
    </afi-safis>
</peer-group>
